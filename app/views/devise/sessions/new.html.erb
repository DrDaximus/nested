
<div class="container">
  <div class="row" style="text-align: center;">
    <div class="col-md-8 col-md-offset-2 form-frame">
      <h2 id="sign-up-title">Sign in to your Nest</h2>
        
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline'}) do |f| %>

        <div class="form-group">
          <%= f.label :email, for: "inputEmail", class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email" %>
        </div>
        <div class="form-group">
            <%= f.label :password, for: "inputPassword  ", class: "sr-only"  %>
            <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", id: "inputpPassword", placeholder: "Password" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <br>
        <%= f.submit "sign in", class: "btn btn-primary sign-in-btn" %>
    
      <% end %>
      
      <div class="form-links">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>

    </div>
  </div>
</div>